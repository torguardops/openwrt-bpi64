++		return ret;
++	}
++
++	/* Probe SPI-NAND flash by JEDEC ID */
++	ret = mtk_snand_id_probe(&tmpsnf, &snand_info);
++	if (ret)
++		return ret;
++
++	rawpage_size = snand_info->memorg.pagesize +
++		       snand_info->memorg.sparesize;
++
