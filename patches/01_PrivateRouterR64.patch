++	if (!snf->page_cache) {
++		generic_mem_free(dev, snf);
++		snand_log_chip(dev,
++			       "Failed to allocate memory for DMA buffer\n");
++		return -ENOMEM;
++	}
++
++	/* Fill up instance */
++	snf->pdev = dev;
++	snf->nfi_base = pdata->nfi_base;
++	snf->ecc_base = pdata->ecc_base;
++	snf->soc = pdata->soc;
++	snf->nfi_soc = &mtk_snand_socs[pdata->soc];
++	snf->snfi_quad_spi = pdata->quad_spi;
