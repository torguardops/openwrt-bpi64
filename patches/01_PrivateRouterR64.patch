++
++	/* Switch to SNFI mode */
++	writel(SPI_MODE, tmpsnf.nfi_base + SNF_CFG);
++
++	/* Reset SNFI & NFI */
++	mtk_snand_mac_reset(&tmpsnf);
++	mtk_nfi_reset(&tmpsnf);
++
++	/* Reset SPI-NAND chip */
++	ret = mtk_snand_chip_reset(&tmpsnf);
++	if (ret) {
